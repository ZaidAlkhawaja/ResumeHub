@page
@model LoginModel

@{
    ViewData["Title"] = "Log in to ResumeHub";
}
    <div class="login-container">
        <div class="row g-0">
            <div class="col-lg-6">
                <div class="login-card h-100">
                    <div class="login-header">
                        <h1><i class="bi bi-file-earmark-person-fill me-2"></i>ResumeHub</h1>
                        <p>AI-Powered Resume & Portfolio Builder</p>
                    </div>
                    <div class="login-body">
                        <h2 class="mb-4">Welcome back</h2>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Forgot password?</a>
                                </div>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>

                            <div class="divider">or</div>

                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            if (provider.Name == "Google")
                                            {
                                                <button type="submit" class="btn btn-google" name="provider" value="@provider.Name">
                                                    <i class="bi bi-google me-2"></i>Continue with Google
                                                </button>
                                            }
                                            else if (provider.Name == "Facebook")
                                            {
                                                <button type="submit" class="btn btn-facebook" name="provider" value="@provider.Name">
                                                    <i class="bi bi-facebook me-2"></i>Continue with Facebook
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                                    Continue with @provider.DisplayName
                                                </button>
                                            }
                                        }
                                    </div>
                                </form>
                            }

                            <div class="login-footer">
                                <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></p>
                                <p>Need to resend confirmation? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Click here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="login-image h-100"></div>
            </div>
        </div>
    </div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
<style>
    :root {
        --primary-color: #4e73df;
        --secondary-color: #2e59d9;
        --accent-color: #1cc88a;
        --dark-color: #2c3e50;
        --light-color: #f8f9fc;
        --white: #FFFFFF;
        --gray: #6C757D;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light-color);
        color: var(--dark-color);
        line-height: 1.6;
    }

    .login-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .login-card {
        background-color: var(--white);
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        overflow: hidden;
    }

    .login-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }

        .login-header h1 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .login-header p {
            opacity: 0.9;
        }

    .login-body {
        padding: 2rem;
    }

    .form-floating label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        padding: 1rem;
        height: auto;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        padding: 0.75rem;
        font-weight: 600;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }

    .btn-google {
        background-color: #DB4437;
        color: white;
        font-weight: 600;
    }

        .btn-google:hover {
            background-color: #c23325;
            color: white;
        }

    .btn-facebook {
        background-color: #4267B2;
        color: white;
        font-weight: 600;
    }

        .btn-facebook:hover {
            background-color: #365899;
            color: white;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 2rem 0;
        color: var(--gray);
    }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }

        .divider::before {
            margin-right: 1rem;
        }

        .divider::after {
            margin-left: 1rem;
        }

    .login-footer {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--gray);
    }

        .login-footer a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }

            .login-footer a:hover {
                text-decoration: underline;
            }

    .login-image {
        background-image: url('https://images.unsplash.com/photo-1521791055366-0d553872125f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        min-height: 400px;
        border-radius: 0 10px 10px 0;
    }

    media (max-width: 992px) {
        .login-image

    {
        display: none;
    }

    }
</style>
}