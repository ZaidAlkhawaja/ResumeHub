<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom-0">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-lines-fill text-primary me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Your account contains personal data that you have provided to us. This page allows you to manage that data.
                    </div>

                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning:</strong> Deleting your data will permanently remove your account, and this action cannot be undone.
                    </div>

                    <div class="d-flex flex-column flex-md-row gap-3 mt-4">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="flex-grow-1">
                            <button class="btn btn-primary w-100" type="submit">
                                <i class="bi bi-download me-2"></i>Download Personal Data
                            </button>
                        </form>

                        <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger flex-grow-1">
                            <i class="bi bi-trash me-2"></i>Delete Account
                        </a>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <h5 class="mb-3">
                            <i class="bi bi-shield-lock text-primary me-2"></i>Data Security Information
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>All data is encrypted in transit and at rest</li>
                            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>We never share your data with third parties</li>
                            <li><i class="bi bi-check-circle text-success me-2"></i>Regular security audits ensure your data protection</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
