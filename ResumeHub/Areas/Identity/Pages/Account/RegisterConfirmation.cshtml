 @page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | ResumeHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #2e59d9;
            --accent-color: #1cc88a;
            --dark-color: #2c3e50;
            --light-color: #f8f9fc;
            --white: #FFFFFF;
            --gray: #6C757D;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-color);
            color: var(--dark-color);
            line-height: 1.6;
        }

        .confirmation-container {
            max-width: 800px;
            margin: 4rem auto;
            padding: 2rem;
        }

        .confirmation-card {
            background-color: var(--white);
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            padding: 3rem;
            text-align: center;
        }

        .confirmation-icon {
            font-size: 4rem;
            color: var(--accent-color);
            margin-bottom: 1.5rem;
        }

        .confirmation-title {
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .confirmation-message {
            font-size: 1.1rem;
            margin-bottom: 2rem;
            color: var(--dark-color);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
                border-color: var(--secondary-color);
            }

        .footer {
            background-color: var(--dark-color);
            color: white;
            padding: 3rem 0;
            margin-top: 4rem;
        }

        .footer-links h5 {
            font-weight: 700;
            margin-bottom: 1.5rem;
            position: relative;
        }

            .footer-links h5::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 40px;
                height: 2px;
                background: var(--accent-color);
            }

        .footer-links a {
            color: #adb5bd;
            text-decoration: none;
            transition: color 0.3s ease;
            display: block;
            margin-bottom: 0.5rem;
        }

            .footer-links a:hover {
                color: white;
            }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            color: white;
            margin-right: 0.5rem;
            transition: all 0.3s ease;
        }

            .social-icons a:hover {
                background: var(--accent-color);
                transform: translateY(-3px);
            }

        .copyright {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 1.5rem;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="confirmation-card">
            <div class="confirmation-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h1 class="confirmation-title">Email Confirmed!</h1>
            <p class="confirmation-message">Thank you for confirming your email address. Your account is now active and ready to use.</p>
            <a href="/Home/Index" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Go to Home Page
            </a>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h3 class="text-white mb-4">
                        <i class="bi bi-file-earmark-person-fill me-2"></i>ResumeHub
                    </h3>
                    <p class="text-muted">AI-powered resume and portfolio builder helping professionals land their dream jobs since 2025.</p>
                    <div class="social-icons mb-4">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <div class="footer-links">
                        <h5>Product</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">AI Features</a></li>
                            <li><a href="#">Pricing</a></li>
                            <li><a href="#">Templates</a></li>
                            <li><a href="#">Updates</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <div class="footer-links">
                        <h5>Company</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Careers</a></li>
                            <li><a href="#">Press</a></li>
                            <li><a href="#">Blog</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <div class="footer-links">
                        <h5>Support</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">Help Center</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms of Service</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <div class="footer-links">
                        <h5>Resources</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">AI Resume Tips</a></li>
                            <li><a href="#">Career Advice</a></li>
                            <li><a href="#">Interview Tips</a></li>
                            <li><a href="#">Job Search</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 text-center text-md-start copyright">
                    <p class="mb-0 text-muted">&copy; 2025 ResumeHub. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end copyright">
                    <p class="mb-0 text-muted">
                        <a href="#" class="text-muted text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-muted text-decoration-none">Terms</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>