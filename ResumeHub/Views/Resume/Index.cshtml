@model List<ResumeHub.DTOs.ResumeJsonDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<link rel="stylesheet" href="~/css/ResumeView.css" asp-append-version="true" />

<!-- Main Content -->
<div class="container py-4">
    <!-- Welcome Header -->
    <div class="welcome-header">
        <div class="container">
            <h3 class="mb-1">Welcome back, <strong>@(User?.Identity?.Name ?? "User")</strong></h3>
            <p class="text-muted mb-0">You have @Model.Count Resumes</p>
        </div>
    </div>

    <!-- Document Navigation -->
    <div class="document-nav">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" href="#">All documents</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Resumes (@Model.Count)</a>
            </li>
        </ul>
    </div>

    <!-- Action Row -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <a asp-action="CreateNewResume" asp-controller="Resume" class="btn btn-primary mb-3 mb-md-0">
            <i class="bi bi-plus-lg me-2"></i>New Resume
        </a>

        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" class="form-control" placeholder="Search resumes...">
        </div>
    </div>

    <!-- Tip Box -->
    <div class="tip-box">
        <strong>TIP:</strong> Did you know that tailoring your resume to the job description can double your interview chances?
    </div>

    <!-- Resumes List -->
    <div class="resumes-list">
        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-file-earmark-text"></i>
                </div>
                <h4>No resumes yet</h4>
                <p class="text-muted mb-4">Create your first resume to get started</p>
                <a asp-action="CreateNewResume" asp-controller="Resume" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Create New Resume
                </a>
            </div>
        }
        else
        {
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="resume-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="resume-title">@Model[i].Title / @Model[i].FirstName</h4>
                            <div class="resume-meta">
                                @* <span>Last edited: @Model[i].LastEdit("MMMM dd, yyyy")</span> *@
                                @* <span>• Created: @Model[i].Created("MMM,dd,yyy")</span> *@
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-action="EditResume" asp-controller="Resume" asp-route-ID="@Model[i].Id" ><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-eye me-2"></i>Preview</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Download</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-action=" DeleteResume" asp-controller="Resume" asp-route-ID="@Model[i].Id"><i class="bi bi-trash me-2"></i>Delete</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="mt-3 action-buttons">
                        <a asp-action ="EditResume" asp-controller="Resume" asp-route-ID="@Model[i].Id" class="btn btn-sm btn-outline-primary action-btn">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-action="ResumesTemplates" asp-controller="Resume" asp-route-ID="@Model[i].Id" target="_blank" class="btn btn-sm btn-outline-secondary action-btn">
                            <i class="bi bi-eye me-1"></i>Preview
                        </a>
                        <a asp-action="DownloadResume" asp-controller="Resume" asp-route-ID="@Model[i].Id" class="btn btn-sm btn-outline-secondary action-btn">
                            <i class="bi bi-download me-1"></i>Download
                        </a>
                        <a asp-action="DeleteResume" asp-controller="Resume" asp-route-ID="@Model[i].Id" class="bi bi-trash me-2 btn btn-sm btn-outline-secondary action-btn  text-danger       ">
                            <i class=" text-danger"></i>Delete
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script src="~/js/ResumeView.js" asp-append-version="true"></script>
