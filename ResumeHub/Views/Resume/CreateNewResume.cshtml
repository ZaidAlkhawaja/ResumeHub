                                                <input asp-for="ResumeTemplateId" type="radio" value="3" hidden />
                                                <img src="~/images/ResumeDesgin/ResumeTemplate3.png" class="img-fluid mb-2" alt="Classic" />
                                                <div>Classic</div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>












                        <!-- Step 4: Review & Submit -->
                        <div class="form-section @(Model.CurrentStep == 4 ? "active" : "")" data-step="3">
                            <h4>Review</h4>
                            <div class="preview-section" id="preview">
                                <h5>Personal Information</h5>
                                <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                                <p><strong>Phone:</strong> @Model.Phone</p>
                                <p><strong>Email:</strong> @Model.Email</p>
                                <p><strong>LinkedIn:</strong> @(string.IsNullOrEmpty(Model.LinkedIn) ? "—" : Model.LinkedIn)</p>
                                <p><strong>GitHub:</strong> @(string.IsNullOrEmpty(Model.GitHub) ? "—" : Model.GitHub)</p>
                                <p><strong>Summary:</strong><br>@Model.Summary</p>
                                <hr>
                                <h5>Education</h5>
                                <p>@Model.Education</p>
                                <hr>
                                <h5>Experience</h5>
                                <p>@Model.Experience</p>
                                <hr>
                                <h5>Skills</h5>
                                <p>@Model.Skills</p>
                            </div>
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="consentCheckbox" required>
                                <label class="form-check-label" for="consentCheckbox">

                                    I agree to send my information to the AI system for enhancement.
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary w-100" name="command" value="submit">Submit to AI</button>
                        </div>

                      
                        <!-- Navigation Buttons -->
                        <div class="form-navigation">
                            <button type="submit" class="btn btn-outline-secondary" name="command" value="prev" @(Model.CurrentStep == 1 ? "disabled" : "")>

                                Back
                            </button>
                            <button type="submit" class="btn btn-primary" name="command" value="next" @(Model.CurrentStep == 4 ? "disabled" : "")>

                                Next
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

