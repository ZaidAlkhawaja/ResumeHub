                        <!--Section 3 Chose Resume Template -->                   

                        <div class="form-section @(Model.CurrentStep == 3 ? "active" : "")" data-step="4" id="design-section">
                            <div class="card mb-4 shadow-sm">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-paint-brush me-2"></i> Select Resume Template</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-4">
                                        <div class="col-md-4 text-center">
                                            <label class="design-option p-2 border rounded w-100">
                                                <input asp-for="ResumeTemplateId" type="radio"  value="1" hidden />
                                                <img src="~/images/ResumeDesgin/ResumeTemplate1.png" class="img-fluid mb-2" alt="Classic" />
                                                <div>Classic</div>
                                            </label>
                                        </div>
                                        <div class="col-md-4 text-center">
                                            <label class="design-option p-2 border rounded w-100">
                                                <input asp-for="ResumeTemplateId" type="radio" value="2" hidden />
                                                <img src="~/images/ResumeDesgin/ResumeTemplate2.png" class="img-fluid mb-2" alt="Classic" />
                                                <div>Classic</div>
