<section id="reviews" class="py-5 bg-light-custom">
    <div class="container">
        <h2 class="section-title">User Reviews</h2>
        <p class="text-center text-muted mb-5">Share your experience with ResumeHub</p>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
                    <div class="card-body p-4">
                        <h4 class="text-center mb-4">Add Your Review</h4>
                        <form asp-controller="Home" asp-action="SubmitReview" method="post">
                            <!-- Rating -->

                            <div class="rating-container">
                                <div class="rating">
                                    <input type="radio" asp-for="Rating" id="star5" name="rating" value="5" />
                                    <label for="star5" title="5 stars">★</label>
                                    <input type="radio" asp-for="Rating" id="star4" name="rating" value="4" />
                                    <label for="star4" title="4 stars">★</label>
                                    <input type="radio" asp-for="Rating" id="star3" name="rating" value="3" />
                                    <label for="star3" title="3 stars">★</label>
                                    <input type="radio" asp-for="Rating" id="star2" name="rating" value="2" />
                                    <label for="star2" title="2 stars">★</label>
                                    <input type="radio" asp-for="Rating" id="star1" name="rating" value="1" />
                                    <label for="star1" title="1 star">★</label>
                                </div>


                                <!-- Comment -->
                                <div class="mb-4">
                                    <label asp-for="Comment" class="form-label">Your Review</label>
                                    <textarea asp-for="Comment" class="form-control" rows="4"
                                              placeholder="Share your experience..."></textarea>
                                    <span asp-validation-for="Comment" class="text-danger small"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary px-5">Submit Review</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



        <div class="row justify-content-center mt-5">
            <div class="col-12 col-lg-10 col-xl-8">
                <h2 class="text-center mb-4 fw-bold">What Our Users Say</h2>
                <p class="text-center text-muted mb-5">Hear from professionals who transformed their careers with our services</p>

                @if (ViewBag.RecentReviews is Task<List<ResumeHub.Models.Review>> reviewTask)
                {
                    var reviews = reviewTask.GetAwaiter().GetResult();
                    if (reviews != null && reviews.Any())
                    {
                        <div class="row g-4">
                            @foreach (var review in reviews)
                            {
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden hover-shadow">
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-start mb-3">
                                                <div class="review-avatar bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; font-size: 1.2rem;">
                                                    @review.UserName[0]
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h5 class="mb-1 fw-semibold">@review.UserName</h5>
                                                    <div class="star-rating-display mb-1">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star") @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                                        }
                                                    </div>
                                                    <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </div>
                                            </div>
                                            <p class="mb-0 text-dark" style="min-height: 80px;">@review.Comment</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="text-center mt-4">
                            <a href="/reviews" class="btn btn-outline-primary px-4">View All Reviews</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 bg-light rounded-3">
                            <i class="bi bi-chat-square-text display-4 text-muted mb-3"></i>
                            <h5 class="fw-semibold mb-2">No reviews yet</h5>
                            <p class="text-muted mb-4">Be the first to share your experience!</p>
                            <a href="/submit-review" class="btn btn-primary px-4">Write a Review</a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 bg-light rounded-3">
                        <i class="bi bi-chat-square-text display-4 text-muted mb-3"></i>
                        <h5 class="fw-semibold mb-2">No reviews yet</h5>
                        <p class="text-muted mb-4">Be the first to share your experience!</p>
                        <a href="/submit-review" class="btn btn-primary px-4">Write a Review</a>
                    </div>
                }
            </div>
        </div>

</section>


